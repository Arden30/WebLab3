<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property> <!-- DB Driver -->
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/studs?charSet=UTF-8</property> <!-- DB Url -->
        <property name="connection.username">****</property> <!-- DB User -->
        <property name="connection.password">****</property> <!-- DB Password -->
        <property name="dialect">org.hibernate.dialect.PostgreSQL10Dialect</property> <!-- DB Dialect -->
        <property name="hbm2ddl.auto">update</property> <!-- create / create-drop / update -->
        <property name="connection.pool_size">100</property>
        <property name="show_sql">true</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.connection.charSet">UTF-8</property>
    </session-factory>
</hibernate-configuration>